@model List<MeuProjeto.Models.Produto>

@{
    ViewBag.Title = "Lista de Produtos";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Cadastrar")">Cadastrar Novo Produto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Preço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.Nome</td>
                <td>@produto.Preco.ToString("C")</td>
            </tr>
        }
    </tbody>

</table>
