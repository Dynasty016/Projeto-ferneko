@model List<Projeto_ferneko_2.Models.Fornecedor>

@{
    ViewBag.Title = "Lista de Fornecedores";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Cadastrar")">Cadastrar Novo Fornecedor</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Telefone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fornecedor in Model)
        {
            <tr>
                <td>@fornecedor.Id</td>
                <td>@fornecedor.Nome</td>
                <td>@fornecedor.Telefone</td>
            </tr>
        }
    </tbody>
</table>
